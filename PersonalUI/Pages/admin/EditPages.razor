@page "/admin/editpages"

<AuthorizeView>
    <Authorized>
        <div class="container-fluid">
            <div class="container border-bottom border-dark">
                <h3 class="mt-3 p-2">
                    Pages editing
                </h3>
                <p class="p-2">Selected section will be updated</p>
            </div>
            <div class="container m-2">
                <form class="">
                    <div class="row d-flex justify-content-end mt-3">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="color-white"><i>Page, section</i></label>
                                <select class="form-select form-control" aria-label="page-selector">
                                    <option selected>Select page and section</option>
                                    <option value="home-home">Home, Home</option>
                                    <option value="projects-work">Projects, My work</option>
                                    <option value="projects-bestProjects">Projects, Best projects </option>
                                    <option value="about-about">About, About me </option>
                                    <option value="about-status">About, My status </option>
                                    <option value="about-location">About, Location </option>
                                </select>
                            </div>
                            <button class="btn btn-primary">Save</button>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="color-white"><i>Section content</i></label>
                                <input type="text" name="content" class="form-control" id="contentInput" aria-describedby="contentHelp" placeholder="Content" required />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <p class="p-3">You do not have permission to open this page</p>
    </NotAuthorized>
</AuthorizeView>

